<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/redbg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="90dp"
        android:text="악성 URL 검사를 완료하였습니다"
        android:fontFamily="@font/roboto_thin"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        />


    <View
        android:id="@+id/checkView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="60dp"

        android:background="#FFFFFF"
        />

    <TextView
        android:id="@+id/checkViewUrlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkView"
        android:layout_alignTop="@+id/checkView"
        android:layout_alignRight="@+id/checkView"
        android:layout_alignBottom="@+id/checkView"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="URL"
        android:textSize="15dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_thin"
        />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="175dp"
        android:src="@drawable/redcheck"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/roboto_thin"
        android:text="악성 URL이 탐지되었습니다"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>